# Evalio Production Environment Configuration
# Copy this file to .env and update with your production values

# ===========================================
# SERVER CONFIGURATION
# ===========================================
NODE_ENV=production
PORT=3001
HOST=0.0.0.0

# ===========================================
# DATABASE CONFIGURATION
# ===========================================
# MySQL Database Configuration (Production)
DB_TYPE=mysql
DB_HOST=localhost
DB_PORT=3306
DB_NAME=evalio_production
DB_USER=evalio_user
DB_PASSWORD=your_secure_database_password
DB_CHARSET=utf8mb4
DB_TIMEZONE=+00:00

# ===========================================
# JWT AUTHENTICATION
# ===========================================
# IMPORTANT: Change this to a secure random string in production
JWT_SECRET=your_super_secure_jwt_secret_key_change_this_in_production
JWT_EXPIRES_IN=7d

# ===========================================
# PASSWORD SECURITY
# ===========================================
BCRYPT_ROUNDS=12

# ===========================================
# RATE LIMITING
# ===========================================
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# ===========================================
# AI API KEYS
# ===========================================
# DeepSeek API Key (for AI evaluation)
DEEPSEEK_API_KEY=your_deepseek_api_key_here

# Tavily API Key (for market research)
TAVILY_API_KEY=your_tavily_api_key_here

# ===========================================
# ADMIN CONFIGURATION
# ===========================================
# Default admin credentials (will be created automatically)
# You can change these or create admin users manually
ADMIN_EMAIL=admin@yourdomain.com
ADMIN_PASSWORD=your_secure_admin_password

# ===========================================
# SECURITY SETTINGS
# ===========================================
# CORS settings (comma-separated origins)
CORS_ORIGINS=https://yourdomain.com,https://www.yourdomain.com

# Trust proxy (set to true if behind reverse proxy)
TRUST_PROXY=true

# ===========================================
# LOGGING
# ===========================================
LOG_LEVEL=info
LOG_FILE=./logs/app.log

# ===========================================
# EMAIL CONFIGURATION (Optional)
# ===========================================
# SMTP settings for email notifications
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USER=your_email@gmail.com
# SMTP_PASS=your_app_password
# FROM_EMAIL=noreply@yourdomain.com

# ===========================================
# FILE UPLOAD (Optional)
# ===========================================
# Maximum file upload size (in bytes)
MAX_FILE_SIZE=10485760

# Upload directory
UPLOAD_DIR=./uploads

# ===========================================
# MONITORING (Optional)
# ===========================================
# Health check endpoint
HEALTH_CHECK_ENABLED=true

# Metrics collection
METRICS_ENABLED=true

# ===========================================
# BACKUP CONFIGURATION (Optional)
# ===========================================
# Backup directory
BACKUP_DIR=./backups

# Backup retention days
BACKUP_RETENTION_DAYS=30

# ===========================================
# DEVELOPMENT SETTINGS
# ===========================================
# Only for development - remove in production
# DEBUG=true
# VERBOSE_LOGGING=true
